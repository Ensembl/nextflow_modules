nextflow_process {

    name "Test Process URLS_EXTRACT"
    script "../main.nf"
    process "URLS_EXTRACT"

    tag "modules"
    tag "modules_ensembl"
    tag "urls"
    tag "urls/extract"

    test("Should extract connection info from URL with all components") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test1' ], 
                    "mysql://user:password@host.com:3306/database"
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }

    test("Should extract connection info from URL without password") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test2' ],
                    "mysql://user@host.com:3306/database"
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }

    test("Should extract connection info from URL without database") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test3' ],
                    "mysql://user:password@host.com:3306"
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }

    test("Should fail with invalid URL format") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test4' ],
                    "invalid_url"
                ]
                """
            }
        }

        then {
            assert process.failed
            assert snapshot(process.stderr).match()
        }
    }
}

