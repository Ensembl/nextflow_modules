// nf-core modules test fasta/dumpfastanuc
nextflow_process {

    name "Test Process FASTA_DUMPFASTANUC"
    script "../main.nf"
    process "FASTA_DUMPFASTANUC"

    tag "modules"
    tag "modules_local"
    tag "fasta"
    tag "fasta/dumpfastanuc"

    test("Fasta Dump Nucleotide stub") {
        when {

            options "-stub"

            process {
                """
                input[0] = Channel.of(
                    '>SEQ1',
                    'CGTA'
                    )
                    .collectFile(name: 'dna.fasta', newLine: true)
                    .map { file -> [ [ id:'test dump dna' ], file ] }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}