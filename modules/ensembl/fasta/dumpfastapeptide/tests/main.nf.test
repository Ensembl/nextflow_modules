// nf-core modules test fasta/dumpfastanuc
nextflow_process {

    name "Test Process FASTA_DUMPFASTAPEPTIDE"
    script "../main.nf"
    process "FASTA_DUMPFASTAPEPTIDE"

    tag "modules"
    tag "modules_local"
    tag "fasta"
    tag "fasta/dumpfastapeptide"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("Fasta Dump Peptide [stub]") {
            when {

                options "-stub"


                process {
                    """
                    input[0] = Channel.of(
                        '>PEP1',
                        'LAHC'
                        )
                        .collectFile(name: 'pep.fasta', newLine: true)
                        .map { file -> [ [ id:'test dump peptide' ], file ] }
                    """
                }
            }

            then {
                assertAll(
                    { assert process.success },
                    { assert snapshot(process.out).match() }
                )
            }
        }
}