nextflow_process {

    name "Test Process MANIFEST_INTEGRITY"
    script "modules/ensembl_modules/manifest/integrity/main.nf"
    process "MANIFEST_INTEGRITY"
    tag "modules"
    tag "modules_nfcore"
    tag "manifest/integrity"
    tag "manifest"

    test("Integrity check stub") {

        when {
            options "-stub"

            process {
                """
                // Just one GFF file
                
                input[0] = Channel.of(
                    '##gff-version 3',
                    'chr1\tID=gene1'
                    )
                    .collectFile(name: 'genes.gff3', newLine: true)
                    .map { file -> [ [ id:'test' ], file ] }
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
