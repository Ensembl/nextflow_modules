nextflow_process {

    name "Test Process SCHEMA_JSON"
    script "../main.nf"
    process "SCHEMA_JSON"

    tag "modules"
    tag "modules_nfcore"
    tag "SCHEMA_JSON"

    test("Schema check for the JSON file stub") {
        when {
            options "-stub"

            process {
                """
                input[0] = Channel.of(
                        '{accession : lorem}',
                        '{species : lorem}'
                    )
                    .collectFile(name: 'meta.json', newLine: true)
                    .map { file -> [ [ id:'test' ], file ] }
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }

    }

}
